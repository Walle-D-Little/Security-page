<script>
/* -------------------------
   Auto-scroll from cards
   ------------------------- */
document.querySelectorAll('.card').forEach(card=>{
  card.addEventListener('click', () => {
    const id = card.getAttribute('data-target');
    const el = document.getElementById(id);
    if(el){
      el.scrollIntoView({behavior:'smooth', block:'start'});
      // briefly highlight
      el.style.transition = 'box-shadow .6s, border-color .6s';
      el.style.boxShadow = '0 24px 60px rgba(106,0,255,0.12)';
      setTimeout(()=> el.style.boxShadow = '', 900);
    }
  });
  // allow keyboard activation (Enter)
  card.addEventListener('keydown', (ev)=>{
    if(ev.key === 'Enter' || ev.key === ' ') { card.click(); ev.preventDefault(); }
  });
});

/* -------------------------
   Quiz logic (shows correct answers & explanations)
   ------------------------- */
function checkQuiz(){
  const answers = { q1:'B', q2:'C', q3:'A', q4:'B', q5:'B' };
  const explanations = {
    q1: 'Phishing is a technique to trick people into revealing sensitive info.',
    q2: 'Complex, long strings with symbols are strongest.',
    q3: '2FA adds another step (authenticator, SMS, key) to verify identity.',
    q4: 'Public Wi-Fi can be monitored, so sensitive data can be intercepted.',
    q5: 'Unknown USB drives may contain malware — scan or avoid them.'
  };

  const form = new FormData(document.getElementById('quizForm'));
  let score = 0;
  let detail = '';

  for(const q in answers){
    const user = form.get(q) || 'Not answered';
    const correct = answers[q];
    const ok = user === correct;
    if(ok) score++;
    detail += `<div style="margin-bottom:10px;padding:10px;border-radius:8px;background:rgba(255,255,255,0.02)">
      <strong>${q.toUpperCase()}</strong><br>
      Your answer: <span style="color:${ok? '#b7ffcc':'#ffb3b3'}">${user}</span><br>
      Correct answer: <strong>${correct}</strong><br>
      Explanation: <span style="color:var(--muted)">${explanations[q]}</span>
    </div>`;
  }

  document.getElementById('quizResult').innerHTML = `<div style="font-weight:800;color:#fff;margin-bottom:10px">Score: ${score} / ${Object.keys(answers).length}</div>${detail}`;
  // scroll to result
  document.getElementById('quizResult').scrollIntoView({behavior:'smooth', block:'center'});
}

/* -------------------------
   Q/A toggles
   ------------------------- */
document.querySelectorAll('.qa-question').forEach(q=>{
  q.addEventListener('click', ()=> {
    const ans = q.nextElementSibling;
    if(!ans) return;
    ans.style.display = ans.style.display === 'block' ? 'none' : 'block';
  });
  q.addEventListener('keydown', (ev)=>{
    if(ev.key === 'Enter' || ev.key === ' ') { q.click(); ev.preventDefault(); }
  });
});

/* -------------------------
   Scroll reveal using IntersectionObserver
   ------------------------- */
const revealEls = document.querySelectorAll('.reveal, .qa-card, .quiz-box');
const io = new IntersectionObserver((entries)=>{
  entries.forEach(e=>{
    if(e.isIntersecting){
      e.target.classList.add('visible');
      // Unobserve to avoid repeated triggers
      io.unobserve(e.target);
    }
  });
},{threshold:0.15});

revealEls.forEach(el => io.observe(el));

/* -------------------------
   Set footer year
   ------------------------- */
document.getElementById('year').textContent = new Date().getFullYear();
</script>

</body>
